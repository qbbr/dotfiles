#!/usr/bin/env bash

# ./get-currency
#
# using:
#   ./script      - USD
#   ./script EUR  - EUR
#
# depends: curl, bc, jq
# author: @qbbr

URL="https://api.apilayer.com/currency_data/live?currencies=RUB&source="
APIKEY=""
BASE=${1:-USD}

OUTPUT=$(curl -s "${URL}${BASE}" --header "apikey: ${APIKEY}" | jq ".quotes.${BASE}RUB")
echo "scale=2;${OUTPUT}/1" | bc -l
