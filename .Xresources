*color15:                              #d5d5d5

! xpdf
! =========================================================
xpdf*enableFreetype:                   yes
xpdf*antialias:                        yes
!xpdf*foreground:                       white
!xpdf*background:                       black
xpdf*urlCommand:                       /usr/bin/iceweasel %s
xpdf*viKeys:                           on

